@model IEnumerable<Student>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="container">
    <div class="row p-2 justify-content-end">
        <div class="col-md-2 ml-md-auto">
            <input type="date" />
        </div>
        <div class="col-md-2 ml-md-auto">
            <form asp-action="Report">
                <button class="btn btn-warning">Weekly Report</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            <table  id="dashboard_table">
                <thead>
                    <tr>
                        <th scope="col">N Number</th>
                        <th scope="col">Name</th>
                        <th scope="col">Check In Status</th>
                        <th scope="col">Check Out Status</th>
                        <th scope="col">Profile</th>
                        <th scope="col">Comments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.nNumber</td>
                            <td>@student.firstName @student.lastName</td>
                            <td>
                                <select class="browser-default custom-select">
                                    <option>On Time</option>
                                    <option>Late - Excused</option>
                                    <option>Absent - Excused</option>
                                    <option>Late - Not Excused</option>
                                    <option>Absent - Not Excused</option>
                                </select>
                            </td>
                            <td>
                                <select class="browser-default custom-select">
                                    <option>On Time</option>
                                    <option>Late - Excused</option>
                                    <option>Absent - Excused</option>
                                    <option>Late - Not Excused</option>
                                    <option>Absent - Not Excused</option>
                                </select>
                            </td>
                            <td class="align-middle">
                                <a href='@Url.Action("StudentView", "Student")\@student.Id'>
                                    <input type='button' class="btn btn-info btn-sm btn-block" value="To Profile"/>
                                </a>
                            </td>
                            <td><input type="text"></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/dashboard_table.js"></script>
}
