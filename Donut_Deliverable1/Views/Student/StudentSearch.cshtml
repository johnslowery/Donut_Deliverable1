@model IEnumerable<Student>
@{
    ViewData["Title"] = "StudentSearch";
}


<center><h1>Search Through Students</h1></center>
<br />
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<style>
    table, th, td {
        text-align: center;
        border: 1px solid black;
    }

    h1, h2 {
        font-family: Abril;
    }

    th, td {
        font-family: "ITC Stone Sans";
    }
</style>

<center>
    <table id="student_table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    nNumber
                </th>
                <th>
                    Birth Date
                </th>
                <th>
                    Funding Source(s)
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
            <tr>
                <td><a href="StudentView/@student.Id">@student.firstName</a></td>
                <td>@student.lastName</td>
                <td>@student.nNumber</td>
                <td>@student.birthDate</td>
                <td>@student.scholarship</td>
                <td><a href="Edit/@student.Id">Edit @student.firstName</a></td>
            </tr>
            }
        </tbody>
    </table>
</center>

<br />
<center><a asp-action="Create">Add a Student</a></center>

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/student_table.js"></script>
}
