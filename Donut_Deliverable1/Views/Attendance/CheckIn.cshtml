@model Donut_Deliverable1.Models.Attend
@{
    ViewBag.Title = "CheckIn";
}

    <style>
        .btn-xlarge {
            padding: 18px 28px;
            font-size: 50px;
            line-height: normal;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }
    </style>

<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<div class="jumbotron vertical-center">

    <div class="text-center">
        <h1 class="arc-header-font">Attendance</h1>

        <form asp-action="Verification" asp-controller="Attendance" method="Post">

            <label for="nNumber" style="font-size:30px">Please enter your N-number: </label>
            <input type="tel" id="nNumber" placeholder="01234567"  name="nNumber" style="font-size:18pt;" maxlength="8" autocomplete="off" required autofocus /><br />


            <input type="submit" value="Submit" class="btn btn-primary btn-xlarge" />
            <br />
            @Html.ValidationMessageFor(m => m.nNumber, "", new { @class = "text-danger font-weight-bold" })
            <br />
            <br /><br />



            <img src="/Images/UNFcard-480x292.jpg" alt="Green check mark" height="200" width="333" /><br />
        </form>
</div>
</div>
