@model Student
@{

    ViewData["Title"] = "Verification";
}

<h1>Verification</h1>

<div class="text-center">


    <h3>Is this you?</h3>

    <h4> @Model.firstName @Model.lastName</h4>
    <h5> @Model.nNumber</h5>


    <img src='@Url.Action("GetImage", "Attendance")/@Model.Id' width="250" height="300" />
    <input type="submit" value="Yes" class="btn btn-lg btn-success" onclick="location.href='@Url.Action("Success", "Attendance")/@Model.Id'" />
    <input type="submit" value="No" class="btn btn-lg btn-danger" onclick="location.href='@Url.Action("CheckIn", "Attendance")'" />
</div>