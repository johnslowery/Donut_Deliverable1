@model Student
@{

    ViewData["Title"] = "Verification";
}

    <style>
        .btn-xlarge {
            padding: 18px 28px;
            font-size: 50px;
            line-height: normal;
            -webkit-border-radius: 8px;
            -moz-border-radius: 8px;
            border-radius: 8px;
        }
    </style>

<h1>Verification</h1>

<div class="text-center">


    @await Component.InvokeAsync("InOut", new { number = @Model.nNumber })

    <h3>Is this you?</h3>

    <h4> @Model.firstName @Model.lastName</h4>
    <h5> @Model.nNumber</h5>


    <img src='@Url.Action("GetImage", "Attendance")/@Model.Id' width="250" height="300" /><br />
    <div class="container">
        <div class="row">
            <div class="col">
                <input type="submit" value="Yes" class="btn btn-xlarge btn-success" onclick="location.href='@Url.Action("Success", "Attendance")/@Model.Id'" />
            </div>
            <div class="col">

            </div>
            <div class="col">
                <input type="submit" value="No" class="btn btn-xlarge btn-danger" onclick="location.href='@Url.Action("CheckIn", "Attendance")'" />
            </div>
        </div>
    </div>

</div>